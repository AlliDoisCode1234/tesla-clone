<%- include('partials/header') -%>
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-6">
                <h2>
                    <%= card.title %>
                </h2>
                <img class="img-fluid" src="<%= card.image%>" />
                <div class="row justify-content-between">
                    <form class="col-1" action="/card/likeCard/<%= card.id %>?_method=PUT" method="POST">
                        <button class="btn btn-primary fa fa-heart" type="submit"></button>
                    </form>
                    <h3 class="col-3">Likes: <%= card.likes %>
                    </h3>
                    <%if(card.user==user.id){ %>
                        <form action="/card/deleteCard/<%= card.id %>?_method=DELETE" method="POST" class="col-3">
                            <button class="btn btn-primary fa fa-trash" type="submit"></button>
                        </form>
                        <%}%>
                </div>
            </div>
            <div class="col-3 mt-5">
                <p>
                    <%= card.caption %>
                </p>
            </div>
            <div class="col-6 mt-5">
                <a class="btn btn-primary" href="/profile">Return to Profile</a>
                <a class="btn btn-primary" href="/feed">Return to Feed</a>
            </div>
        </div>
    </div>

    <%- include('partials/footer') -%>